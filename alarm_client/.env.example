# VPS connection
VPS_URL=wss://your-domain.com/ws
REST_API_URL=https://your-domain.com/api

# Authentication
ALARM_USERNAME=admin
ALARM_PASSWORD=your-password-here

# Timezone (IANA timezone database name)
TIMEZONE=America/New_York

# Paths
# Windows example: CV_ALARM_ROOT=C:\Users\YourName\cv_alarm
# macOS/Linux example: CV_ALARM_ROOT=/Users/ethan/Downloads/Web/cv_alarm
CV_ALARM_ROOT=/Users/ethan/Downloads/Web/cv_alarm
RUN_ALARM_SCRIPT=run_alarm.py
MODEL_PATH=models/shufflenet_pretrained_weights.pth

# Reconnection settings
RECONNECT_INITIAL_DELAY=1
RECONNECT_MAX_DELAY=60
RECONNECT_MULTIPLIER=2

# Process management
MAX_ALARM_DURATION=1900
# LOCK_FILE_PATH is auto-detected based on OS (optional override)
# Windows: %TEMP%\cv_alarm.lock
# Linux/Mac: /tmp/cv_alarm.lock
